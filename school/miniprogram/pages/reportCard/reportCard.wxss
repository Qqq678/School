text {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.table {
  width: 100%;
  height: 2000rpx;
  border-bottom: 1rpx solid black;
}

.tr {
  height: 60rpx;
  width: 100%;
  display: flex;
  border-top: 1px solid black;
}

